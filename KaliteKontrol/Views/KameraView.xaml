<UserControl
    x:Class="KaliteKontrol.Views.KameraView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:KaliteKontrol.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:KaliteKontrol.Viewmodels"
    xmlns:views="clr-namespace:KaliteKontrol.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:KameraViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{StaticResource DefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            Margin="10"
            Source="{Binding Bitmap}"
            Stretch="Uniform" />


        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Background="{StaticResource PrimaryColorBrush}"
                Command="{Binding ResimKayitCommand}"
                Content="Fotoğraf Çek"
                Style="{StaticResource CustomButton}" />

            <Button
                Background="{StaticResource PrimaryColorBrush}"
                Command="{Binding SayfaDegisCommand}"
                Content="Sayfa Değiş"
                Style="{StaticResource CustomButton}" />
        </StackPanel>
    </Grid>
</UserControl>
