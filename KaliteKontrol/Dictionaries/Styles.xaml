<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="PrimaryColorBrush" Color="#6200EE" />
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="#03DAC6" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#222CFC" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#3700B3" />
    <SolidColorBrush x:Key="DefaultBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="GrayBrush" Color="#789789" />
    <!--  ColorZone Stili  -->
    <Style x:Key="ColorZoneStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />

    </Style>

    <!--  Custom Card  -->
    <DropShadowEffect
        x:Key="CardShadow"
        BlurRadius="8"
        Opacity="0.25"
        ShadowDepth="2"
        Color="Black" />

    <Style x:Key="CustomCard" TargetType="Border">

        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Effect" Value="{StaticResource CardShadow}" />
    </Style>

    <Style x:Key="BaglantilarEllipse" TargetType="Ellipse">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

    <Style x:Key="Baglantilar" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style x:Key="SeriNoUrunKodu" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>


</ResourceDictionary>